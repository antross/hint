<details class="hint">
    <summary class="hint__header">
        <span class="hint__name">
            <%= name %>
        </span>
        <span class="hint__status">
            <% if (!problems.length) { %>
                PASSED
            <% } else { %>
                <%= problems.length %> hint<% if (problems.length !== 1) { %>s<% } %></span>
            <% } %>
    </summary>
    <a href="<%= helpURL %>" target="_blank">
        Learn why this is important<% if (problems.length) { %> and how to fix it<% } %>
    </a>
    <div class="hint__results">
        <% problems.forEach(function (problem, index) { %>
            <%- include('results-problem', { index: index, problem: problem }); %>
        <% }); %>
    </div>
</details>
