<div class="problem">
    <div class="problem__message">
        <span class="problem__number">hint <%= (index + 1) %>:</span>
        <%= problem.message %>
    </div>
    <a class="problem__resource" href="view-source:<%= problem.resource %>" target="_blank">
        <%= problem.resource %><% if (problem.location.line > -1) { %>:<%= (problem.location.line + 1) %>:<%= (problem.location.column + 1) %><% } %>
    </a>
    <% if (problem.sourceCode) { %>
        <pre class="problem__code"><%= problem.sourceCode %></pre>
    <% } %>
</div>
