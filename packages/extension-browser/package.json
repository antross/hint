  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "webhint browser extension",
  "devDependencies": {
    "@hint/hint-axe": "^1.1.0",
